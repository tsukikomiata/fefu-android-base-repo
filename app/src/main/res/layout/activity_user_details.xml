<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/user_details_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="0dp"
        android:paddingEnd="4dp"
        app:navigationIcon="@drawable/ic_arrow2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#808080" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="32dp">

            <TextView
                android:id="@+id/user_details_username"
                style="@style/textView_purpleText"
                android:layout_marginTop="24dp"
                android:text="\@van_darkholme" />

            <TextView
                android:id="@+id/user_details_distance"
                style="@style/textView_blackHeader"
                android:layout_marginTop="24dp"
                android:text="14.32 км" />

            <TextView
                android:id="@+id/user_details_end"
                style="@style/textView_greyText"
                android:text="14 часов назад" />

            <TextView
                android:id="@+id/user_details_time"
                style="@style/textView_blackHeader"
                android:layout_marginTop="24dp"
                android:text="1 ч 42 мин" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_details_start_label"
                    style="@style/textView_blackText"
                    android:text="@string/details_text_start_label" />

                <TextView
                    android:id="@+id/user_details_start_time"
                    style="@style/textView_greyText"
                    android:layout_marginStart="8dp"
                    android:text="14:49" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="16dp"
                    android:background="#808080" />

                <TextView
                    android:id="@+id/user_details_end_label"
                    style="@style/textView_blackText"
                    android:text="@string/details_text_end_label" />

                <TextView
                    android:id="@+id/user_details_end_time"
                    style="@style/textView_greyText"
                    android:layout_marginStart="8dp"
                    android:text="16:31" />
            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/user_details_textInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="24dp"
                app:hintAnimationEnabled="false"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/user_details_textInputEditText"
                    style="@style/textView_greyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/details_hint_comment"
                    android:imeOptions="actionDone"
                    android:inputType="textMultiLine"
                    android:text="Я бежал очень сильно, ты так не сможешь" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>